/*
	PHOTOLIST
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
.photoList
    text-align center
    margin 1em auto 0.5em auto
    li
        width 6.5em
        height 6.5em
        background-color naranja
        display inline-flex
        color #FFFFFF
        position relative
        border-radius 50%
        
        span
            font-size 2.5em
            position absolute
            left 32%
            top 30%
            
        input
            position absolute
            border solid transparent
            opacity 0.0
            /*filter: alpha(opacity=0);*/
            -o-transform translate(250px, -50px) scale(1)
            -moz-transform translate(-300px, 0) scale(4)
            direction ltr
            cursor pointer
            margin 0
            top 0
            left 0
            bottom 0
            width 6em
        &:first-child
            display block
            margin 0 auto 1.1em auto				
				


